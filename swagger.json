        ],
        "description": "Endpoint to update a specific Member",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Add a Member",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Victor Hugo"
                },
                "email": {
                  "type": "string",
                  "example": "victor.hugo@gmail.com"
                },
                "membership_type": {
                  "type": "string",
                  "example": "Administration"
                },
                "books_borrowed": {
                  "type": "array",
                  "example": [],
